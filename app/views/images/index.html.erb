<p id="notice"><%= notice %></p>

<h1 class="big-text text-center scrollimation fade-in in">Listing Images</h1>
<div class="container masonry-wrapper">
		<div class="col-lg-12">
			
		<div id="projects-container" class="masonry" style="visibility: visible;position: relative;height: <%= @height%>px;">
			    <%
			    index = 0
			    %>
			    <% @images.each do |image| %>
			    <%
			    top = (index / 3) * 303;
			    left = 8
			    if ((index + 1) % 3) == 1
			      left = 0
			    end
			    if ((index + 1) % 3) == 2
			      left = 4
			    end
			    %>
			    <%
			    if ((index + 1) % 3) == 1
			    %>
			    	<div class = "row">
			    <%
			    end
			     index += 1
			    %>
			    <div class="col-md-4">
			      <article class="project-item illustration masonry-brick" style="position: absolute;top:<%= top %>px">
  					<%= image_tag image.url, class: "img-responsive project-image" %>
  					<div class="hover-mask">
  						<h2 class="project-title"><%= image.name %></h2><!--Project Title -->
  						<p><%= image.description %></p><!--Project Subtitle -->
  					</div>
			      </article>
			     </div>
			     <%
			     if ((index + 1) % 3) == 1
			     	%>
			     	</div>
			     <%
			     end
			     %>
			   <% end %>
	</div><!-- End projects --> 
	</div>
				
</div>
  
<br>
<% @images.each do |image| %>
<%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>

<%= link_to 'New Image', new_image_path, remote: true, class: "btn btn-primary" %>

<%= render 'dialog' %>
